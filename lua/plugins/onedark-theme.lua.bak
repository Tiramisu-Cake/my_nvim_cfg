return {
  {
    "folke/tokyonight.nvim",
    enabled = false, -- disable default theme
  },
  {
    "navarasu/onedark.nvim",

    lazy = false,
    priority = 1000,
    config = function()
      -- 24-бит и темная тема
      vim.opt.termguicolors = true
      vim.opt.background = "dark"

      -- настраиваем onedark
      require("onedark").setup({
        style = "darker", -- storm, dark, cool, deep, warm, light
        transparent = true, -- фон будет пустым
        term_colors = true, -- брать цвета из темы
        code_style = {
          comments = "italic",
          keywords = "bold",
          functions = "bold",
          strings = "none",
          variables = "none",
        },
      })
      -- включаем
      require("onedark").load()

      -- на всякий случай сбросим фон
      local groups = {
        "Normal",
        "NormalNC",
        "SignColumn",
        "StatusLine",
        "LineNr",
        "CursorLineNr",
        "EndOfBuffer",
        "VertSplit",
        "WinSeparator",
      }
      for _, g in ipairs(groups) do
        vim.api.nvim_set_hl(0, g, { bg = "none" })
      end
    end,
  },
  {
    "LazyVim/LazyVim",
    opts = { colorscheme = "onedark" },
  },
}
